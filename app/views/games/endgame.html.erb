<% if @game.whos_turn == 1 %>
<% @game.whos_turn = 2 %>
<% elsif @game.whos_turn == 2 %>
<% @game.whos_turn = 1 %>
<% end %>

<h1> GAME OVER. PLAYER <%= @game.whos_turn %> WINS! CONGRATS! </h1>

<% @board = @game.spaces %>

<p><%= "|#{@board[1][1]}|#{@board[2][1]}|#{@board[3][1]}|#{@board[4][1]}|#{@board[5][1]}|#{@board[6][1]}|#{@board[7][1]}|" %></p>
